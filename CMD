mkfifo myfifo

cat myfifo | for ((i=1;i<10;i++)) ; do ~/src/bin/ffmpeg -re -y -r 30 -f rawvideo -vcodec rawvideo -pix_fmt yuv420p -s 320x240 -i myfifo -t 10 -vcodec libx264 -vprofile baseline -pix_fmt yuv420p -s 320x240 $i.mp4 ; echo $i.mp4 >> playlistwebm.txt ; echo $i.mp4 ; done ; rm playlistwebm.txt

rm playlistwebm.txt ; ~/src/bin/ffmpeg -re -y -s 320x240 -f video4linux2 -i /dev/video0  -pix_fmt yuv420p -s 320x240 -vcodec rawvideo -f rawvideo  -r 30 myfifo

